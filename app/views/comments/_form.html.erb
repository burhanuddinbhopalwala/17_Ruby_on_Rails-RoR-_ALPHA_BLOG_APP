<!-- For adding a comment -->
<h2 align = "center">Add a comment:</h2>
<%= form_with(model: [@article, @article.comments().build()], 
    :html => {class: "form-horizontal", role: "form"}, 
    local: true) do |form| %>
  <!-- 
    2: The form_with() call here uses an array, which will build 
    a nested route, such as /articles/1/comments
  -->
    <div class = "form-group">                
      <div class="control-label col-xs-2 col-sm-2 col-md-2 col-lg-2">
        <%= form.label :commenter %><br/>
      </div>
      <div class = "col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <%= form.text_field :commenter, class: "form-control", 
            placeholder: "Name", autofocus: true %>
      </div>
    </div>

    <div class = "form-group">                
      <div class="control-label col-xs-2 col-sm-2 col-md-2 col-lg-2">
        <%= form.label :body %><br/>
      </div>
      <div class = "col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <%= form.text_area :body, rows: 5, class: "form-control", 
            placeholder: "Comment summary" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-2 col-lg-offset-2 col-xs-10 col-sm-10 col-md-10 col-lg-10">
        <%= form.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>       
<% end %>